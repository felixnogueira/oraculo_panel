<UserControl x:Class="ORACULO_PR.Loading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             xmlns:local="clr-namespace:ORACULO_PR"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">

    <Grid>
        <Border Background="#FFF1F2F3"/>
        <Viewbox MaxHeight="200">
            <Image x:Name="gifPlay" gif:ImageBehavior.AnimatedSource="pack://siteoforigin:,,,/Resources/Spinner-1s-500px.gif" Width="200" />
        </Viewbox>
    </Grid>
</UserControl>
